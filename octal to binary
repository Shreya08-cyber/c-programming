#include <stdio.h>
int main() {
    int octal, decimal = 0, i = 0, rem;
    int binary[32], j = 0;
    printf("Enter an octal number: ");
    scanf("%d", &octal);
    int base = 1;
    int temp = octal;
    while(temp > 0) {
        rem = temp % 10;
        decimal += rem * base;
        base *= 8;
        temp /= 10;
    }
    while(decimal > 0) {
        binary[j++] = decimal % 2;
        decimal /= 2;
    }
    printf("Binary: ");
    for(int k = j - 1; k >= 0; k--) {
        printf("%d", binary[k]);
    }
    printf("\n");
    return 0;
}
